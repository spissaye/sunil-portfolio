%section#contact.contact-area.section-gap
  .container
    .row.d-flex.justify-content-center
      .menu-content.pb-20.col-lg-8
        .title.text-center
          %h1.mb-10 Need more info? Just drop me a line.
    = form_for @contact, url: contact_path(format: :json), method: :post, remote: true, authenticity_token: form_authenticity_token, name: "contact", html: {class: "contact-form form-area mt-60", id: "contact_form"} do |f|
      .row
        .col-lg-6.form-group
          = f.text_field :name, required: true, placeholder: "Enter Your Name", onfocus: "Enter Your Name", maxlength: "255", class: "common-input mb-20 form-control"
          = f.email_field :email, required: true, placeholder: "Enter Your Email", onfocus: "Enter Your Email Address", class: "common-input mb-20 form-control"
          = f.text_field :subject, required: true, placeholder: "Enter Your Subject", onfocus: "Enter Your Subject", class: "common-input mb-20 form-control"
        .col-lg-6.form-group
          = f.text_area :message, required: true, placeholder: "Enter Your Message", onfocus: "Enter Your Message", maxlength: "500", class: "common-input mb-20 form-control"  
          = f.submit "Send Message", class: "send-message-btn"
          .alert-msg
    .row
      .col-lg-12.form-group.contact-thank-you
        Thank you for reaching out. I will get in touch with you right away.
      .col-lg-12.form-group.contact-error
        Seems like something went wrong. Please refresh the page or try again later.
/ end contact Area
